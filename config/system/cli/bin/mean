#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander'),
  pkg = require('../package.json'),
  version = pkg.version,
  os = require('os');

program
  .version(version)
  .usage('[options] [npm module]')
  .option('-v, --verbose', 'verbose messaging')
  .option('-i, --install', 'run npm install')  
  .parse(process.argv);


var lib = require('../lib/mean');
// Path
var path = program.args;

(function mean(params) {
  var op = params[0],
    module = params[1];    
    var options = {install:program.install};
  switch (op) {
   case 'init':
      lib.init(params[1],options);    
      break;
    case 'install':
      lib.install(module);
      break;
    case 'uninstall':
      lib.uninstall(module);
      break;
    case 'list':
      lib.list();
      break;
    case 'rebuild':
      lib.rebuild();
      break;
    default:
      console.log('Try [install/uninstall/list] !');
      break;
  }
})(path);

